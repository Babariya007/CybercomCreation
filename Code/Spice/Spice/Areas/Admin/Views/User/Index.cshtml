@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Users List";
}


<br />
<br />

<div class="card p-3">
    <div class="row">
        <div class="pl-3">
            <h3>Users List</h3>
        </div>
        <div class="ml-auto create-btn">
            <a class="btn btn-info text-white" asp-area="Admin" asp-action="Create" asp-controller="ManuItem"><i class="fas fa-plus"></i> Create Employee Registration</a>
        </div>
    </div>
    <br />
    <h4 class="text-danger">@ViewBag.NoData</h4>
    <p class="text-danger">@ViewBag.Error</p>
    <div>
        @if (Model.Count() != 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr class="table-active">
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">PhoneNumber</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var users in Model)
                    {
                        <tr>
                            <td>
                                @users.Name
                            </td>
                            <td>
                                @users.Email
                            </td>
                            <td>
                                @users.PhoneNumber
                            </td>
                            <td class="text-white">
                                @if (users.LockoutEnabled == false)
                                {
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="Lock" asp-route-email="@users.Email" title="Lock"><i class="fas fa-lock-open"></i></a>
                                }
                                else
                                {
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="UnLock" asp-route-email="@users.Email" title="Lock"><i class="fas fa-lock"></i></a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="alert alert-danger">No have Any Data</p>
        }
    </div>
</div>