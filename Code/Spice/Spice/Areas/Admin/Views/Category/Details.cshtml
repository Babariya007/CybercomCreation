@model CategoryViewModel

@{
    ViewBag.Title = "Category Details";
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<h3>Category Detail</h3>

<div class="card">
    <p class="text-danger">@ViewBag.Error</p>

    <div class="card-body">
        <div class="form-group row">
            <label asp-for="CategoryName" class="col-sm-2 col-form-label">Category Name</label>
            <div class="col-sm-5">
                <input type="text" asp-for="CategoryName" disabled class="form-control" placeholder="Enter Category Name">
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <a class="form-control btn btn-success" asp-area="Admin" asp-action="" asp-controller="Category">Back to List</a>
            </div>
        </div>
    </div>
</div>