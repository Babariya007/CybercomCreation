@model IEnumerable<Coupon>

@{
    ViewBag.Title = "Coupon List";
}


<br />
<br />

<div class="card p-3">
    <div class="row">
        <div class="pl-3">
            <h3>Coupon List</h3>
        </div>
        <div class="ml-auto create-btn">
            <a class="btn btn-info text-white" asp-area="Admin" asp-action="Create" asp-controller="Coupon"><i class="fas fa-plus"></i> Create New</a>
        </div>
    </div>
    <br />
    <h4 class="text-danger">@ViewBag.NoData</h4>
    <p class="text-danger">@ViewBag.Error</p>
    <div>
        @if (Model.Count() != 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr class="table-active">
                        <th scope="col">Name</th>
                        <th scope="col">Discount</th>
                        <th scope="col">MinimumAmount</th>
                        <th scope="col" class="text-center">IsActive</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var coupon in Model)
                    {
                        <tr>
                            <td>
                                @coupon.Name
                            </td>
                            <td>
                                @coupon.Discount
                            </td>
                            <td>
                                @coupon.MinimumAmount
                            </td>
                            <td class="text-center">
                                <input type="checkbox" asp-for="@coupon.IsActive" class="form-check-input" disabled />
                            </td>
                            <td class="text-right text-white">
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="Coupon" asp-action="Edit" asp-route-Id="@coupon.CouponID" title="Edit"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-success" asp-action="Details" asp-controller="Coupon" asp-area="Admin" asp-route-id="@coupon.CouponID" title="View"><i class="fas fa-newspaper"></i></a>
                                <a class="btn btn-danger" title="Delete" asp-area="Admin" asp-action="Delete" asp-controller="Coupon" asp-route-id="@coupon.CouponID" onclick="return confirm('Are you Sure Delete Record ?')"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="alert alert-danger">No have Any Data</p>
        }
    </div>
</div>