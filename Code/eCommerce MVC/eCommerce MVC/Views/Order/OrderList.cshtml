@*@model IEnumerable<eCommerce_Model.OrderModel>*@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>OrderList</h2>


<table class="table" id="datatable">
    <thead>
        <tr>
            <th>Action</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Total Quantity</th>
            <th>Total Amount</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<link href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>

<script>
    $(document).ready(function () {
        $('#datatable').DataTable({
            "processing": true,
            "destroy": true,
            "ordering": true,
            "filter": true,
            "paging": true,
            "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
            "serverSide": true,

            "ajax": {
                "url": "/Order/OrderListDataTable",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                {
                    bSortable: false,
                    "data": "OrderID",
                    "rander": function (data) {
                        return "<a href='/OrderItem/OrderDetails/" + data + "'>View</a>";
                    }
                },
                { "data": "FirstName" },
                { "data": "LastName" },
                { "data": "TotalQuantity" },
                { "data": "TotalAmount" },
                {
                    "data": "OrderDate",
                    "render": function (data) {
                        return moment(data).format('DD/MM/YYYY HH:MM:SS');
                    }
                }
            ]
        });
    });
</script>
