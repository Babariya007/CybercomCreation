@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck row">
    @foreach (var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.Photopath ?? "123.jpg");

        <div class="card col-md-3" style="margin:20px;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnil" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.EncryptedId" class="btn btn-primary">View</a>
                @*<a href="" class="btn btn-primary">View</a>*@
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@employee.EncryptedId" class="btn btn-primary">Edit</a>
                <a href="" class="btn btn-danger">Delete</a>

            </div>
        </div>
    }
</div>
